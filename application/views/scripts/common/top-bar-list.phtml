			<a class="btn btn-success navbar-btn" href="<?= $this->baseUrl() . '/' . $this->controllerName ?>/add">Adicionar</a>
			<a href="#" id="remove" class="btn btn-primary navbar-btn" >Remover</a>
		</div>
	</div>
